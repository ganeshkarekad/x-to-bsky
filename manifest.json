{
  "manifest_version": 3,
  "name": "X to Bluesky Reposter",
  "version": "1.0.0",
  "description": "Repost from X.com to Bluesky with one click",
  "permissions": [
    "storage",
    "identity",
    "tabs",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://bsky.social/*",
    "https://bsky.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://x.com/*", "https://twitter.com/*"]
    }
  ]
}